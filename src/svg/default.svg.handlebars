    padding: 0 {{const.WINDOW_PADDING}}px;
    color: {{ palette.colors.white }};
    line-height: {{const.LINE_HEIGHT}}px;
  }
  .container pre {
    padding: 0;
    margin: 0;
    font: 14px {{font_family}};
    line-height: inherit;
  }
  .input {
    {{~#if (eq line_numbers "continuous")}}

